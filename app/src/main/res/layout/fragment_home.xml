<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/search_bar_rdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="\t Search for appointment  ..."
        android:layout_margin="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rdvlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar_rdv"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="82dp" />


    <ProgressBar
        android:id="@+id/progressBarrdv"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/addrdvitem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_add_note"
        android:visibility="visible"
        android:padding="20dp" />

    <ImageButton
        android:id="@+id/removerdvitem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_delete_note"
        android:visibility="invisible"
        android:padding="20dp" />




</RelativeLayout>