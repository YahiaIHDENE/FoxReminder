<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_Rdv_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="5dp"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="#05df29"
        app:civ_border_width="23dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/Title_Rdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#E44E1F"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="150dp"
        android:layout_toEndOf="@+id/image_Rdv_item"
        android:layout_toRightOf="@+id/image_Rdv_item"
        android:text="Note Title" />


    <TextView
        android:id="@+id/adress_Rdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title_Rdv"
        android:layout_marginRight="150dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image_Rdv_item"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:text="Adress Rdv"
        android:textColor="#2196F3"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/date_Rdv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        android:layout_below="@id/adress_Rdv"
        android:layout_toRightOf="@id/image_Rdv_item"
        android:text="Date Rdv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:maxLines="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedRDV"
        android:src="@drawable/ic_delete_note"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:visibility="invisible"/>


</RelativeLayout>



